<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        android:layout_width="375dp"
        android:layout_height="200dp"
        app:cardBackgroundColor="@color/cardview_shadow_end_color">

        <LinearLayout
            android:layout_width="350dp"
            android:layout_height="203dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView7"
                android:layout_width="0dp"
                android:layout_height="127dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/userfree" />

            <LinearLayout
                android:layout_width="101dp"
                android:layout_height="197dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="247dp"
                        android:layout_height="151dp"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/textView22"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Nombre:"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/textView23"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Carrera:" />

                        <TextView
                            android:id="@+id/textView24"
                            android:layout_width="match_parent"
                            android:layout_height="36dp"
                            android:text="Email:" />

                        <TextView
                            android:id="@+id/textView25"
                            android:layout_width="match_parent"
                            android:layout_height="43dp"
                            android:text="Habilidades:" />

                        <TextView
                            android:id="@+id/textView26"
                            android:layout_width="match_parent"
                            android:layout_height="34dp"
                            android:text="Ãrea:" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="316dp"
                        android:layout_height="152dp"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/NombreAlu"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Nombre"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/CarreraAlu"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Carrera" />

                        <TextView
                            android:id="@+id/EmailAlu"
                            android:layout_width="match_parent"
                            android:layout_height="35dp"
                            android:text="Email" />

                        <TextView
                            android:id="@+id/HabilidadesAlu"
                            android:layout_width="match_parent"
                            android:layout_height="43dp"
                            android:text="Hablidades" />

                        <TextView
                            android:id="@+id/InteresesAlu"
                            android:layout_width="match_parent"
                            android:layout_height="34dp"
                            android:text="Intereses" />

                    </LinearLayout>

                </LinearLayout>

                <Button
                    android:id="@+id/ver"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="CONTACTAR ALUMNO" />

            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>
</LinearLayout>
